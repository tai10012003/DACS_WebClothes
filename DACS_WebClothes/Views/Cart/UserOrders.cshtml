@model DACS_WebClothes.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10" style="padding: 0";>
            <div class="category">
                <p>ĐƠN HÀNG CỦA BẠN</p>
            </div>
            @if (Model.UserOrders != null && Model.UserOrders.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">Mã đơn hàng</th>
                            <th class="text-center">Ngày đặt hàng</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.UserOrders)
                        {
                            <tr>
                                <td class="align-middle text-center">@order.OrderId</td>
                                <td class="align-middle text-center">@order.DateBegin.ToString("dd-MM-yyyy HH:mm:ss")</td>
                                <td class="align-middle text-center">@order.Status</td>
                                <td class="align-middle text-center">
                                    <a href="@Url.Action("OrderDetails", "Cart", new { cartId = order.CartId })">
                                        <i class="fas fa-info-circle" style="margin-right: 10px;"></i>Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center">Không có đơn hàng nào được tìm thấy.</p>
            }
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
