@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model DACS_WebClothes.ViewModels.CommentProductViewModel
<div class="row" style="margin-top: 60px">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="max-heading">
            <p>SỬA BÌNH LUẬN SẢN PHẨM</p>
        </div>
        <form asp-action="EditCP" asp-controller="CommentProduct" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ComproId" />
            <input type="hidden" name="CommentId" value="@Model.ComproId" />
            <div class="form-group">
                <h5><span style="color: red">@ViewContext.HttpContext.User.Identity.Name</span> đã đăng bình luận về sản phẩm <span style="color: red">@Model.ProductName</span></h5>
            </div>
            <div class="form-group" style="display: none;">
                <label class="control-label">Tên người dùng: </label>
                <input type="hidden" asp-for="cp.UserId" value="@ViewBag.UserId" />
                <span class="form-control">@ViewContext.HttpContext.User.Identity.Name</span>
            </div>
            <div class="form-group" style="display: none;">
                <label class="control-label">Mã sản phẩm: </label>
                <input type="text" asp-for="cp.ProductId" class="form-control" readonly value="@Model.ProductId" />
            </div>
            <div class="form-group">
                <label class="control-label">Nội dung: </label>
                <textarea asp-for="cp.ComProName" class="form-control"></textarea>
                <input type="hidden" name="ContentProduct" value="@Model.ContentProduct" />
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="cp.DateBegin" class="control-label"></label>
                <input asp-for="cp.DateBegin" value="@Model.cp.DateBegin.ToString()" class="form-control" readonly />
                <span asp-validation-for="cp.DateBegin" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-save" style="margin-right: 10px;"></i>Lưu
                </button>
                <a href="/san-pham/@Model.Link-@Model.ProductId" class="btn btn-secondary ml-3">
                    <i class="fas fa-arrow-left" style="margin-right: 10px;"></i>Quay lại
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
@section scripts {
    <script src="~/js/cart.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
}
