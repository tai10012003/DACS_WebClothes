@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model DACS_WebClothes.ViewModels.CommentBlogViewModel
<div class="row" style="margin-top: 60px">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="max-heading">
            <p>THÊM BÌNH LUẬN BÀI VIẾT</p>
        </div>
        <form asp-action="AddCB" asp-controller="CommentBlog" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5><span style="color: red">@ViewContext.HttpContext.User.Identity.Name</span> cảm thấy bài viết <span style="color: red">@Model.ContentBlog</span> như thế nào ?</h5>
            </div>
            <div class="form-group" style="display: none;">
                <label class="control-label">Tên người dùng: </label>
                <input type="hidden" asp-for="cb.UserId" value="@ViewBag.UserId" />
                <span class="form-control">@ViewContext.HttpContext.User.Identity.Name</span>
            </div>
            <div class="form-group" style="display: none;">
                <label class="control-label">Mã bài viết: </label>
                <input type="text" asp-for="cb.BlogId" class="form-control" readonly value="@Model.BlogId" />
            </div>
            <div class="form-group">
                <label class="control-label">Nội dung: </label>
                <textarea asp-for="cb.ComBlogName" class="form-control"></textarea>
                <span asp-validation-for="cb.ComBlogName" class="text-danger"></span>
            </div>

            <div class="form-group" style="display: none;">
                <label asp-for="cb.DateBegin" class="control-label"></label>
                <input asp-for="cb.DateBegin" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" class="form-control" readonly />
                <span asp-validation-for="cb.DateBegin" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-paper-plane" style="margin-right: 10px" ;></i>Gửi
                </button>
                <a href="/bai-viet/@Model.Link-@Model.BlogId" class="btn btn-secondary ml-3">
                    <i class="fas fa-arrow-left" style="margin-right: 10px;"></i>Quay lại
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
@section scripts {
    <script src="~/js/cart.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
}
