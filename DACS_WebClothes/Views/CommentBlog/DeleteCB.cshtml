@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model DACS_WebClothes.ViewModels.CommentBlogViewModel

<div class="row" style="margin-top: 60px">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="max-heading">
            <p>XÓA BÌNH LUẬN BÀI VIẾT</p>
        </div>
        <form asp-action="DeleteCB" asp-controller="CommentBlog" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Bạn có chắc chắn muốn xóa bình luận bài viết <span style="color: red">@Model.BlogName</span> này không?</h5>
            </div>
            <input type="hidden" asp-for="ComBlogId" />
            <div class="form-group row" style="margin-bottom: 0">
                <label class="control-label">Khách hàng: </label>
                <p class="ml-3">@ViewContext.HttpContext.User.Identity.Name</p>
            </div>
            <div class="form-group" style="display: none;">
                <label class="control-label">Mã bài viết: </label>
                <input type="text" asp-for="cb.BlogId" class="form-control" readonly value="@Model.BlogId" />
            </div>
            <div class="form-group row" style="margin-bottom: 0">
                <label class="control-label">Ngày đăng: </label>
                <p class="ml-3">@string.Format("{0:dd/MM/yyyy HH:mm:ss}", Model.cb.DateBegin)</p>
            </div>
            <div class="form-group row">
                <label class="control-label">Nội dung: </label>
                <p class="ml-3">@Model.cb.ComBlogName</p>
            </div>
            <div class="form-group row justify-content-center">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt" style="margin-right: 10px;"></i>Xóa
                </button>
                <a href="/bai-viet/@Model.Link-@Model.BlogId" class="btn btn-secondary ml-3">
                    <i class="fas fa-arrow-left" style="margin-right: 10px;"></i>Quay lại
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
@section scripts {
    <script src="~/js/cart.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
}
