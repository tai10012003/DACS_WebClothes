    <style>
        .cart-icon {
            position: relative;
        }

        .cart-item-count {
            position: absolute;
            top: -10px; /* Điều chỉnh vị trí theo nhu cầu */
            right: -5px; /* Điều chỉnh vị trí theo nhu cầu */
            background-color: red; /* Màu nền */
            color: white; /* Màu chữ */
            border-radius: 100%; /* Bo tròn viền */
            padding: 3px 8px; /* Khoảng cách lề */
            font-size: 12px; /* Cỡ chữ */
        }

        .subnav {
            display: none;
            position: absolute;
            top: 65px;
            right: 0;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.955);
            padding: 0;
            margin: 0;
            list-style-type: none;
            border-left: 1px solid #d6d6d6;
            border-right: 1px solid #d6d6d6;
            border-bottom: 1px solid #d6d6d6;
        }

        .item:hover .subnav {
            display: block;
        }

        .subnav .item {
            display: block;
        }

            .item:hover > a,
            .subnav .item:hover a {
                color: #ff0000;
                transition: background-color 0.5s ease;
            }

            .subnav .item a {
                color: #333;
                padding: 15px 25px;
                display: block;
                margin-top: 5px;
                text-decoration: none;
            }

        .footer-section .social-icons {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            gap: 20px; /* Khoảng cách giữa các icon */
        }

            .footer-section .social-icons li {
                display: inline-block;
            }

                .footer-section .social-icons li a {
                    font-size: 25px;
                    color: #333;
                    transition: color 0.3s;
                }

                    .footer-section .social-icons li a:hover {
                        color: #007bff; /* Màu sắc của các icon khi hover */
                    }
    </style>
</head>
