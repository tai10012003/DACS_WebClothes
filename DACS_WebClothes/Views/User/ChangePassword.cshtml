@model DACS_WebClothes.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container">
    <div class="row justify-content-center" style="margin-top: 70px">
        <div class="col-md-6">
            <div class="category">
                <p>ĐỔI MẬT KHẨU</p>
            </div>
            <div class="card-bodi">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.SuccessMessage
                    </div>
                }
                <form asp-controller="User" asp-action="ChangePassword" method="post">
                    <div class="form-group">
                        <label for="oldPassword">Mật khẩu cũ:</label>
                        <input type="password" class="form-control" id="oldPassword" name="OldPassword" required />
                    </div>
                    <div class="form-group">
                        <label for="newPassword">Mật khẩu mới:</label>
                        <input type="password" class="form-control" id="newPassword" name="NewPassword" required />
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Xác nhận mật khẩu mới:</label>
                        <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required />
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="fas fa-save" style="margin-right: 10px;"></i>Lưu thông tin
                            </button>
                            <a href="/thong-tin" class="btn btn-secondary btn-block">
                                <i class="fas fa-arrow-left" style="margin-right: 10px;"></i>Quay lại
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/cart.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
}