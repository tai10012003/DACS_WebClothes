@model DACS_WebClothes.Models.Cart

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card-bodi" style="border: 1px solid black; padding: 0 100px 0 100px;">
                <div class="category">
                    <p>XÓA ĐƠN HÀNG</p>
                </div>
                <h3 style="margin-bottom: 10px">Bạn có chắc chắn muốn xóa đơn hàng này ?</h3>

                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" for="OrderId">Mã đơn hàng: </label>
                        @Html.DisplayFor(model => model.OrderId)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" for="UserFullName">Người đặt hàng: </label>
                        @Html.DisplayFor(model => model.User.FullName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" for="DateBegin">Ngày đặt hàng: </label>
                        @Html.DisplayFor(model => model.DateBegin)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" name="CategoryName">Phương thức vận chuyển:</label>
                        @Html.DisplayFor(model => model.Payments.TransportMethod)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" name="CategoryName">Phương thức thanh toán:</label>
                        @Html.DisplayFor(model => model.Payments.PaymentMethod)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" for="Status">Trạng thái: </label>
                        @Html.DisplayFor(model => model.Status)
                    </div>
                </div>

                <form action="~/Admin/AdminOrder/Delete" method="post">
                    <div class="col-md-12" style="margin-bottom: 50px">
                        <input type="hidden" name="Id" value="@Model.CartId" />
                        <input type="submit" value="Xóa" class="btn btn-create-new" />
                        <a class="btn btn-create-new text-center" href="~/Admin/AdminOrder/Index" style="margin-left: 10px;">Trở lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
