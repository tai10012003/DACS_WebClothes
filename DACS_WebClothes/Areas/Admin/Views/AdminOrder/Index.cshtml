@model List<DACS_WebClothes.Models.Cart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div style="color:black">
    <h1 style="text-align:center">QUẢN LÝ ĐƠN HÀNG</h1>
    <div class="search-field d-none d-xl-block" style="margin-top: 25px">
        <form class="d-flex align-items-center" action="#">
            <div class="form-group mb-0">
                <input type="text" class="form-control search-input" placeholder="Tìm kiếm" name="SearchString">
                <button type="submit" class="btn btn-success search-button ml-2">Tìm Kiếm</button>
            </div>
        </form>
    </div>
    <section class="attendance">
        <div class="attendance-list">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Giỏ hàng</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.User.FullName</td>
                            <td>@order.DateBegin.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@order.CartDetails.Count()</td>
                            <td>@order.Status</td>
                            <td>
                                <div class="text-center">
                                    <button class="btn btn-create-new" type="button" style="margin-top: 5px">
                                        <a href="~/Admin/AdminOrder/EditAndDetails?id=@order.CartId">Xem chi tiết</a>
                                    </button>
                                    <button class="btn btn-create-new" type="button" style="margin-top: 5px">
                                        <a href="~/Admin/AdminOrder/Delete?id=@order.CartId">Xóa</a>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
