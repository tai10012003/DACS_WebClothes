@model DACS_WebClothes.Models.Discount

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card-bodi" style="border: 1px solid black; padding: 0 100px 0 100px" ;>
                <div class="category">
                    <p>XÓA MÃ GIẢM GIÁ</p>
                </div>
                <h3 style="margin-bottom: 10px">Bạn có chắc chắn muốn xóa mã giảm giá này ?</h3>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" name="DiscountName">Mã giảm giá: </label>
                        @Html.DisplayFor(model => model.DiscountName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" for="DiscountPercent">Giảm (%): </label>
                        @Html.DisplayFor(model => model.DiscountPercent)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <label class="control-label" for="ExpirationDate">Ngày hết hạn: </label>
                        @Html.DisplayFor(model => model.ExpirationDate)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="text-center">
                        <label class="control-label">Ẩn/Hiện: </label>
                        @Html.DisplayFor(model => model.Hidden)
                    </div>
                </div>
                <form action="~/Admin/AdminUsers/Delete" method="post">
                    <div class="col-md-12" style="margin-bottom: 50px">
                        <input type="hidden" name="Id" value="@Model.DiscountId" />
                        <input type="submit" value="Xóa" class="btn btn-create-new" />
                        <a class="btn btn-create-new text-center" href="~/Admin/AdminDiscount/Index" style="margin-left: 10px" ;>Trở lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>