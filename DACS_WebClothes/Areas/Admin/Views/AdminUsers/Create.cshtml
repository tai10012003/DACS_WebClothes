@model DACS_WebClothes.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card-bodi" style="border: 1px solid black; padding: 0 100px 0 100px" ;>
                <div class="category">
                    <p>TẠO NGƯỜI DÙNG</p>
                </div>
                <form action="~/Admin/AdminUsers/Create" method="post">
                    <div class="form-group row">
                        <div class="col-md-8">
                            <label class="col-md-4 control-label">Tên đăng nhập:</label>
                            <input type="text" class="form-control" asp-for="Username" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-8">
                            <label class="col-md-4 control-label">Họ và tên:</label>
                            <input type="text" class="form-control" asp-for="FullName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-8">
                            <label class="col-md-4 control-label">Địa chỉ:</label>
                            <input type="text" class="form-control" asp-for="Address" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-8">
                            <label class="col-md-4 control-label">Email:</label>
                            <input type="text" class="form-control" asp-for="Email" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-8">
                            <label class="col-md-4 control-label">Số điện thoại:</label>
                            <input type="text" class="form-control" asp-for="Phone" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="text-center">
                            <label class="control-label">Quyền:</label>
                            <input type="radio" class="form-control" asp-for="Permission" value="0" checked name="Permission"> Người dùng</label>
                            <input type="radio" class="form-control" asp-for=" Permission" value="1" name="Permission" style="margin-left: 20px" ;>Quản trị viên</label>
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-bottom: 50px">
                        <input class="btn btn-create-new" type="submit" value="Tạo" />
                        <a class="btn btn-create-new text-center" href="~/Admin/AdminUsers/Index" style="margin-left: 10px" ;>Trở lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



    
