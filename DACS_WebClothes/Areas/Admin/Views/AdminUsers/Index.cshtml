@model IEnumerable<DACS_WebClothes.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div style="color:black">
    <h1 style="text-align:center">QUẢN LÝ NGƯỜI DÙNG</h1>
    <div class="search-field d-none d-xl-block" style="margin-top: 25px" ;>
        <form class="d-flex align-items-center" action="#">
            <div class="form-group mb-0">
                <input type="text" class="form-control search-input" placeholder="Tìm kiếm" name="SearchString">
                <button type="submit" class="btn btn-success search-button ml-2">Tìm Kiếm</button>
            </div>
        </form>
    </div>
    <div class="text-center" style="margin-top: -40px" ;>
        <button class="btn btn-create-new"><a href="~/Admin/AdminUsers/Create">Tạo Mới</a></button>
    </div>
        <section class="attendance">
            <div class="attendance-list">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Tên đăng nhập </th>
                            <th> Họ tên </th>
                            <th> Địa chỉ </th>
                            <th> Email </th>
                            <th> Số Điện thoại </th>
                            <th> Quyền </th>
                            <th> Trạng thái tài khoản </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @(item.Permission == 0 ? "Người dùng" : "Quản trị viên")
                                </td>
                                <td>
                                    @(item.Hidden == 0 ? "Hoạt động" : "Khóa")
                                </td>
                                <td>
                                <div class="text-center">
                                    <button class="btn btn-create-new" type="button" style="margin-top: 5px" ;>
                                        <a href="~/Admin/AdminUsers/Edit?id=@item.UserId">Sửa</a>
                                    </button>
                                    <button class="btn btn-create-new" type="button" style="margin-top: 5px" ;>
                                        <a href="~/Admin/AdminUsers/Details?id=@item.UserId">Xem chi tiết</a>
                                    </button>
                                    <button class="btn btn-create-new" type="button" style="margin-top: 5px" ;>
                                        <a href="~/Admin/AdminUsers/Delete?id=@item.UserId">Xóa</a>
                                    </button>
                                </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>




